<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@android:color/holo_red_light"
    >



    <TextView android:text="SLIDE IT!!!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textColor="#defad7"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="121dp"
        android:textStyle="italic"
        android:width="400dp"
        android:typeface="monospace"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/playButton"
        android:layout_marginTop="121dp"
        android:width="200dp"
        android:maxHeight="200dp"
        android:maxLength="200"
        android:maxWidth="200dp"
        android:minHeight="70dp"
        android:textSize="55dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:background="#fff86f"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highscores"
        android:id="@+id/HSButton"
        android:textSize="25dp"
        android:width="200dp"
        android:minHeight="50dp"
        android:maxWidth="200dp"
        android:maxHeight="50dp"
        android:minWidth="200dp"
        android:background="#87ff54"
        android:layout_below="@+id/playButton"
        android:layout_alignLeft="@+id/playButton"
        android:layout_alignStart="@+id/playButton"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exitButton"
        android:textAlignment="center"
        android:width="200dp"
        android:textSize="25dp"
        android:minHeight="50dp"
        android:maxWidth="200dp"
        android:maxLength="200"
        android:maxHeight="50dp"
        android:background="#e19354"
        android:layout_below="@+id/HSButton"
        android:layout_alignLeft="@+id/HSButton"
        android:layout_alignStart="@+id/HSButton"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>

</RelativeLayout>